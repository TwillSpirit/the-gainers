layeredimage Tamcin:
    fit "scale-down"

    group base:
        attribute normal default:
            "tamcin_base"
        attribute arm_up:
            "tamcin_raise_arm"

    group eyes:
        attribute idle default:
            "tamcin_expression_idle"
        attribute blink:
            "tamcin_expression_blink"
        attribute happy:
            "tamcin_expression_happy"

    group mouth:
        attribute shut default:
            "tamcin_mouth_close"
        attribute talk:
            "tamcin_mouth_open"

